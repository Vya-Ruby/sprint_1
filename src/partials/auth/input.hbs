{{#each data}}
  <div class="auth-form__form-elements">
    <h4 class="form-element__title">{{this.title}}</h4>
    <input type="{{this.type}}" value="{{this.value}}" class="form-element__input" placeholder="{{this.placeholder}}">
    {{#if this.icon}}<span class="form-element__icon"></span>{{/if}}
    {{#if this.error}}<small class="form-element__error">{{this.error}}</small>{{/if}}
  </div>
{{/each}}