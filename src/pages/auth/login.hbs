---
figures: ["circle", "square", "triangle"]
login_input_elements: [
{name: "login", title: "Mailing address or login:", placeholder: "Enter email or login", error: '', type: 'text'},
{name: "password", title: "Password:", placeholder: "Enter password", error: '', type: 'password', icon: ''}
]
array_links: ['../../style/style.css', '../../partials/auth/figure.css']
---
{{#extend "auth" links=array_links}}
  {{#content "main"}}
    <main class="auth">
      <div class="auth__beautiful-elements">
        {{> "auth/beautiful-elements" elements=figures}}
        {{> "svg/star"}}
      </div>
      <div class="auth-form">
        {{> "auth/top-links" login=true}}
        <form action="">
          <div class="container-inputs">
            {{> "auth/input" data=login_input_elements}}
          </div>
          <div class="container-everything">
            {{> "auth/button" tyle="submit" text="Sign In"}}
          </div>
        </form>
        <div class="forgot">
          <a href="#">Forgot password?</a>
        </div>
      </div>
    </main>
  {{/content}}
{{/extend}}